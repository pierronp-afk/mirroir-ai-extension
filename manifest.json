{
  "manifest_version": 3,
  "name": "MirrorAI - Portfolio Analyzer",
  "version": "1.0.0",
  "description": "Analyse ton portfolio Google Finance avec l'IA. Conseils Buy/Sell/Hold personnalisés en temps réel.",

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://www.google.com/*",
    "https://mirroir-ai-proxy.vercel.app/*"
  ],

  "background": {
    "service_worker": "src/scripts/background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://www.google.com/finance*"],
      "js": ["src/scripts/content.js"],
      "css": ["src/styles/inject.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "src/components/popup.html",
    "default_icon": {
      "16": "public/icons/icon16.png",
      "32": "public/icons/icon32.png",
      "48": "public/icons/icon48.png",
      "128": "public/icons/icon128.png"
    }
  },

  "icons": {
    "16": "public/icons/icon16.png",
    "32": "public/icons/icon32.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["src/styles/*", "public/images/*"],
      "matches": ["https://www.google.com/*"]
    }
  ]
}
